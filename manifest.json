{
  "manifest_version": 3,
  "name": "Cmd+B",
  "description": "A more delightful bookmarking experience",
  "version": "1.1.0",
  "offline_enabled": true,
  "action": {
    "default_title": "Cmd+B",
    "default_icon": "logo192.png",
    "icons": {
      "16": "logo-16.png",
      "48": "logo-48.png",
      "128": "logo-128.png"
    }
  },
  "icons": {
    "16": "logo-16.png",
    "48": "logo-48.png",
    "128": "logo-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script/main.tsx"],
      "media": []
    }
  ],
  "background": {
    "service_worker": "background/index.ts",
    "persistent": false
  },
  "permissions": ["activeTab", "bookmarks", "scripting", "storage"],
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://gstatic.com/*",
    "*://*/*"
  ],
  "commands": {
    "open-cmdb": {
      "suggested_key": {
        "default": "Ctrl+B",
        "windows": "Ctrl+B",
        "mac": "Command+B",
        "chromeos": "Ctrl+B",
        "linux": "Ctrl+B"
      },
      "description": "Open / Close extension"
    }
  }
}
